#:kivy 2.2.1
#: import BottomNav libs.components.bottomNav

<HomePage>:
    md_bg_color: rgba(36,36,36,255)
    MDFloatLayout: 
        orientation: 'horizontal'
        size_hint_y: .08
        size_hint_x: 1
        pos_hint: {'center_x': 0.5,'center_y': 0.96}
        padding: 10
        spacing: 10
        

        Image:
            source: "assets/logo.png"
            size_hint_x: .14
            pos_hint: {'center_x': 0.1, 'center_y': .5}
        Image:
            source: "assets/image/icon_app/searchHome.png"
            size_hint: None, None
            size: 500, 40
            pos_hint: {'center_x': 0.54, 'center_y': .5}
            on_touch_up: app.root.current = 'searchpage'
            
       
    MDBoxLayout: 
        orientation: 'horizontal'
        size_hint_y: .09
        size_hint_x: 1
        pos_hint: {'center_x': 0.5,'center_y': 0.90}
        padding: 10
        spacing: 10
        MDLabel:
            text: "Cac Ban Bep"
            halign: "center"
            bold: True
            font_size: 17
            color: rgba(147,146,142,255)
        MDLabel:
            text: "Kho Cam Hung"
            halign: "center"
            bold: True
            font_size: 17
            color: rgba(249,248,246,255)
            canvas.before:
                Color:
                    rgb: rgba(252,184,103,255)
                Line:
                    width: 1.2
                    points: (self.x, self.y, self.right, self.y)
    MDLabel:
        text: "Trong tu lanh nha ban co gi"
        pos_hint: {"x": 0.05, 'center_y': 0.82}
        bold: True
        font_size: 17
        color: rgba(246,247,241,255)
    MDLabel:
        text: "Chọn đến 2 nguyên liệu"
        pos_hint: {"x": 0.05, 'center_y': 0.79}
        font_size: 15
        color: rgba(235,235,235,255)

    # Ingredient
    MDScrollView:
        do_scroll_y: False
        size_hint_y: .09
        pos_hint: {'center_x': .54, 'center_y': 0.71}
        bar_width: 0
        MDBoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_x: 1.2
            MDBoxLayout:
                id: ingredient_list_first
                orientation: "horizontal"
                spacing: 10
                size_hint_x: 1.2
                
            MDBoxLayout:
                id: ingredient_list_second
                orientation: "horizontal"
                spacing: 10
                size_hint_x: 1.2
                bar_width: None
                
    # Tab
    MDTabs:
        id: hashtag_list
        size_hint_y: .1
        pos_hint: {"center_x": .5, "center_y": 0.6}
        background_color: rgba(36,36,36,255)
        indicator_color: rgba(252,184,99,255)
        padding: [20, 0, 0, 0]
        tab_bar_height: 45
        fixed_tab_label_width: 50

        Hashtag:
            title: "[size=18]Tất cả[/size]"
        
    MDScrollView:
        do_scroll_y: False
        size_hint_y: .4
        pos_hint: {'center_x': .54, 'center_y': 0.38}
        bar_width: 0
        MDBoxLayout:
            id: food_by_hashtag
            orientation: "horizontal"
            spacing: 8
            size_hint_x: 6
                    
    MDBoxLayout:
        size_hint: None, None
        size: 340, 38
        md_bg_color: rgba(118,118,118,255)
        pos_hint: {'center_x': .5, 'center_y': 0.13}
        padding: 112
        radius: 10
        MDIcon:
            icon: "magnify"
            pos_hint: {'center_x': .5, 'center_y': 0.5}
            color: rgba(245,245,243,255)
            font_size: 24
        Label:
            id: label
            text: 'Gợi ý khác'
            font_size: 16
            color: rgba(255,255,255,255)
            width: self.texture_size[0] + 20
            pos_hint: {'center_x': .5, 'center_y': 0.5}
    BottomNav: 
        
                
                
            
               
           



        