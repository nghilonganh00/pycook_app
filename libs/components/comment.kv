#:kivy 2.2.1

<Comment>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height + 10
    spacing: 10

    MDBoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: self.minimum_height
        spacing: 10
        Image:
            source: root.userAvatar
            size_hint: None, None
            size: 30, 30
            pos_hint: {'center_y': 0.5}
            # pos_hint: {"center_x": 0.1, "center_y": 0.5}
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            pos_hint: {'center_y': .5}
            spacing: 2
            MDLabel:
                text: '@' + root.userPycookID
                color: rgba(250,244,224,255)
                font_size: 14
                font_name: 'RRoboto'
                size_hint_y: None  
                height: self.texture_size[1]  
                valign: 'center'
                pos_hint: {'center_y': 0.5}
            MDLabel:
                text: root.commentContent
                color: rgba(248, 247, 246, 255)
                font_size: 18
                font_name: 'RRoboto'
                size_hint_y: None  
                height: self.texture_size[1]  
                valign: 'center'
                pos_hint: {'center_y': 0.5}