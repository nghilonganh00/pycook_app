#:kivy 2.2.1

<MakingBox>:
    orientation: 'horizontal'
    size_hint: None, None  
    width: self.minimum_width
    height: self.minimum_height
    spacing: 10

    MDBoxLayout:
        size_hint: None, None
        size: 26, 26
        pos_hint: {'center_x': 0.45, 'center_y': .9}
        padding: 12, 0, 12, 0
        canvas:
            Color:
                rgb: rgba(248, 247, 246, 255)
            Ellipse:
                pos: self.pos
                size: self.size
        MDBoxLayout:
            size_hint: None, None
            width: self.minimum_width
            height: self.minimum_height 
            pos_hint: {'center_x': .5, 'center_y': .5}
            MDLabel:
                text: root.makingOrder
                color: rgba(36,36,36,255)
                font_size: 18
                font_name: 'RRoboto'
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        width: 300
        height: self.minimum_height
        MDLabel:
            text: root.makingContent
            color: rgba(248, 247, 246, 255)
            font_size: 18
            font_name: 'RRoboto'
            size_hint_y: None
            height: self.texture_size[1]