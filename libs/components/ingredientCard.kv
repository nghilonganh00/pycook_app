#:kivy 2.2.1
<IngredientCard>:
    size_hint_x: None
    width: self.minimum_width + 20
    md_bg_color: rgba(119,120,115,255)
    on_release: root.on_click_ingredient()
    MDBoxLayout:
        orientation: "horizontal"
        spacing: 6
        padding: [4, 0, 4, 0]
        size_hint_x: None
        width: self.minimum_width 
        Image:
            source: root.ingredientImage
            size_hint: None, None
            size: 26, 26
            pos_hint: {'center_y': 0.5}
        MDLabel:
            text: root.ingredientName
            color: rgba(250, 244, 224, 255)
            font_size: 16
            size_hint_x: None
            width: self.texture_size[0]
            text_size: None, None  
